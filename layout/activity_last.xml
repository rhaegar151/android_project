<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".last">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:text="Your Item:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="141dp"
            android:text="Name:"
            android:layout_alignLeft="@+id/t1" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t2"
            android:layout_alignLeft="@+id/t5" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_marginTop="189dp"
            android:text="Price(per week):" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/t4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="88dp" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_alignStart="@+id/t1"
            android:layout_marginTop="233dp"
            android:text="Type:"
            android:layout_alignLeft="@+id/t1" />

        <TextView
            android:id="@+id/t7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/t3"
            android:layout_alignTop="@+id/t6"
            android:layout_alignLeft="@+id/t3" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="127dp"

            android:background="@android:color/holo_blue_dark"
            android:onClick="dr"
            android:text="Download e-receipt" />

        <TextView
            android:id="@+id/t8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/t1"
            android:layout_marginBottom="67dp"
            android:layout_alignLeft="@+id/t1" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>